<% content_for :title, "メニュー" %>
<div data-controller="audio" class="bg-black min-h-[100svh] flex items-center justify-center">
  <div class="container mx-auto p-4">
    <div class="flex flex-col space-y-4">
      <%= link_to timers_path, class: "bg-zinc-900 p-6 rounded-lg shadow-lg hover:bg-zinc-700 block text-center text-white border border-orange-500", data: { action: "click->audio#playSwichSound" } do %>
        <span class="text-xl font-semibold">タイマー</span>
      <% end %>

      <%= link_to settings_path, class: "bg-zinc-900 p-6 rounded-lg shadow-lg hover:bg-zinc-700 block text-center text-white border border-orange-500", data: { action: "click->audio#playSwichSound" } do %>
        <span class="text-xl font-semibold">設定</span>
      <% end %>

      <%= link_to new_user_session_path, class: "bg-zinc-900 p-6 rounded-lg shadow-lg hover:bg-zinc-700 block text-center text-white border border-orange-500", data: { action: "click->audio#playSwichSound" } do %>
        <span class="text-xl font-semibold">試合記録</span>
      <% end %>

      <%= link_to rulegpts_path, class: "bg-zinc-900 p-6 rounded-lg shadow-lg hover:bg-zinc-700 block text-center text-white border border-orange-500", data: { action: "click->audio#playSwichSound" } do %>
        <span class="text-xl font-semibold">ルール確認用GPT</span>
      <% end %>
    </div>
  </div>
</div>
