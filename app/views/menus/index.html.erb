<% content_for :title, "メニュー" %>
<div data-controller="audio" class="bg-black min-h-screen flex items-center justify-center">
  <div class="container mx-auto p-4">
    <div class="flex flex-col space-y-4">
      <button onclick="window.location='<%= timers_path %>'" data-action="click->audio#playSwichSound" class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 block text-center text-white" do %>
        <span class="text-xl font-semibold">タイマー</span>
      </button>

      <button onclick="window.location='<%= new_user_session_path %>'" data-action="click->audio#playSwichSound" class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 block text-center text-white" do %>
        <span class="text-xl font-semibold">試合記録</span>
      </button>

      <button onclick="window.location='<%= settings_path %>'" data-action="click->audio#playSwichSound" class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 block text-center text-white" do %>
        <span class="text-xl font-semibold">設定</span>
      </button>

      <button onclick="window.location='<%= rulegpts_path %>'" data-action="click->audio#playSwichSound" class="bg-gray-800 p-6 rounded-lg shadow-lg hover:bg-gray-700 block text-center text-white" do %>
        <span class="text-xl font-semibold">ルール確認用GPT</span>
      </button>
    </div>
  </div>
</div>
