<% content_for :title, "ユーザー登録" %>
<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="login-section pt-3">
    <!-- サインアップカード -->
    <div class="card text-center pt-5 mx-auto w-full max-w-sm bg-white shadow-lg rounded-lg">
      <h1 class="text-3xl font-semibold text-gray-800 mb-5">サインアップ画面</h1>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <!-- メールフィールド -->
          <div class="mb-4 mt-6">
            <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Eメール" %>
          </div>

          <!-- ユーザ名フィールド -->
          <div class="mb-4">
            <%= f.text_field :username, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "ユーザ名" %>
          </div>

          <!-- パスワードフィールド -->
          <div class="mb-4">
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "パスワード" %>
          </div>

          <!-- パスワード確認フィールド -->
          <div class="mb-4">
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "パスワード確認" %>
          </div>

          <%= f.submit "サインアップ", class: "w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        <% end %>

        <!-- Notice or Alert -->
        <% if notice %>
          <p class="text-green-500 mt-3"><%= notice %></p>
        <% elsif alert %>
          <p class="text-red-500 mt-3"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <!-- サインインリンク -->
    <div class="card text-center py-2 mt-3 mx-auto w-full max-w-sm">
      <div class="card-text">
        既にアカウントを持っている？
        <%= link_to "サインイン", new_user_session_path, class: "text-blue-500 text-sm hover:underline" %>
      </div>
    </div>
  </div>
</div>
