<% content_for :title, "設定" %>
<div class="min-h-screen bg-gray-500 p-4" data-controller="settings audio">
  <!-- 戻るボタン -->
  <button class="text-white text-2xl mb-4" onclick="window.location='<%= timers_path %>'">
  ←
  </button>

  <!-- メインタイマー -->
  <h2 class="text-lg font-bold text-white mb-2">メインタイマー</h2>
  <div class="bg-white p-4 rounded-lg mb-4 shadow">
    <div class="space-y-2">
      <div class="flex justify-between items-center border-b pb-1">
        <span>メイン時間（試合時間）</span>
        <span data-settings-target="mainTime" class="text-gray-700 cursor-pointer"
              data-action="click->settings#editTime blur->settings#saveTime keydown->settings#handleEnter">10:00</span>
      </div>
      <div class="flex justify-between items-center border-b pb-1">
        <span>インターバル（P1,P2とP3,P4の間）</span>
        <span data-settings-target="breakTime" class="text-gray-700 cursor-pointer"
              data-action="click->settings#editTime blur->settings#saveTime keydown->settings#handleEnter">1:00</span>
      </div>
      <div class="flex justify-between items-center border-b pb-1">
        <span>ハーフ時間（P2,P3の間）</span>
        <span data-settings-target="halfTime" class="text-gray-700 cursor-pointer"
              data-action="click->settings#editTime blur->settings#saveTime keydown->settings#handleEnter">10:00</span>
      </div>
      <div class="flex justify-between items-center border-b pb-1">
        <span>エンドレス（メインとインターバルの繰り返し）</span>
        <input type="checkbox" data-settings-target="endless" class="toggle" data-action="change->settings#saveSettings">
      </div>
      <div class="flex justify-between items-center">
        <span>スコアの表示</span>
        <input type="checkbox" data-settings-target="showScore" class="toggle" data-action="change->settings#saveSettings">
      </div>
    </div>
  </div>

  <!-- 24秒タイマー -->
  <h2 class="text-lg font-bold text-white mb-2">24秒タイマー</h2>
  <div class="bg-white p-4 rounded-lg mb-4 shadow">
    <div class="space-y-2">
      <div class="flex justify-between items-center border-b pb-1">
        <span>24秒タイマーの表示</span>
        <input type="checkbox" data-settings-target="show24Timer" class="toggle" data-action="change->settings#saveSettings">
      </div>
      <div class="flex justify-between items-center">
        <span>メインタイマー開始時に同時開始</span>
        <input type="checkbox" data-settings-target="sync24Timer" class="toggle" data-action="change->settings#saveSettings">
      </div>
    </div>
  </div>

  <!-- オーディオ -->
  <h2 class="text-lg font-bold text-white mb-2">オーディオ</h2>
  <div class="bg-white p-4 rounded-lg shadow">
    <div class="space-y-2">
      <div class="flex justify-between items-center border-b pb-1">
        <span>オーディオの有無</span>
        <input type="checkbox" data-settings-target="enableAudio" class="toggle" data-action="change->settings#saveSettings">
      </div>
      <div class="flex justify-between items-center border-b pb-1">
        <span>カウントダウン自動音声（声：<a href="https://ondoku3.com/ja/" target="_blank" rel="noopener noreferrer">音読さん</a>）</span>
        <input type="checkbox" data-settings-target="countdownVoice" class="toggle" data-action="change->settings#saveSettings">
      </div>
      <div class="flex justify-between items-center">
        <span>ハーフ交代自動音声（声：<a href="https://ondoku3.com/ja/" target="_blank" rel="noopener noreferrer">音読さん</a>）</span>
        <input type="checkbox" data-settings-target="memberChangeVoice" class="toggle" data-action="change->settings#saveSettings">
      </div>
    </div>
  </div>
</div>
